              <p class="card-text"><%= post.body %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', post %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_post_path(post) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                </div>
                <small class="text-muted"> <%= post.created_at.to_date %> </small>
              </div>
            </div>
          </div>
        </div>
          <% end %>
